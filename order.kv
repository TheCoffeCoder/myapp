<Obtn>:
    on_release:
        app.manager.transition.direction = 'left'
        app.manager.current = "order"
    background_color:1,1,1,0

<Add_chart>:
    size_hint_y:0.1
    canvas:
        Color:
            rgba:252/255,248/255,10/255,1
        Rectangle:
            size:self.size
            pos:self.pos
    MDLabel:
        text:"1"
        halign:"center"
        font_style:"Caption"
    MDLabel:
        text:"View Chart:"
        halign:"center"
        font_style:"Caption"
    MDLabel:
        text:"Tk 500"
        halign:"center"
        font_style:"Caption"

<Order>:
    orientation:"vertical"
    canvas:
        Color:
            rgba:0.8,0.8,0.8,1
        Rectangle:
            size:self.size
            pos:self.pos
    BoxLayout:
        size_hint_y:0.08
        canvas:
            Color:
                rgba:252/255,248/255,10/255,1
            Rectangle:
                size:self.size
                pos:self.pos
        MDIconButton:
            icon:"android-auto"
            size_hint_x:0.5
            pos_hint:{'center_x':0.5,'center_y':0.5}
            on_release:
                app.manager.transition.direction = 'right'
                app.manager.current = "kitchen"
        MDLabel:
            text:"Order List"
            halign:"left"

    BoxLayout:
        ScrollView:
            size_hint:1,1
            GridLayout:
                padding:5
                spacing:20
                cols:1
                size_hint_y:None
                height:self.minimum_height
                Order_header_card:

                Order_list_card:

                Order_amount_card:

                Order_description_card:

                BoxLayout:
                    orientation:"vertical"
                    size_hint_y:None
                    canvas:
                        Color:
                            rgba:1,1,1,1
                        RoundedRectangle:
                            size:self.size
                            pos:self.pos
                            radius:[5]
                    height:120
                    MDLabel:
                        text:"Payment Method"
                        halign:"center"

                    MDFlatButton:
                        text:"Add Payment Method"
                        text_color:1,0,0,1
                        pos_hint:{'center_x':0.5,'center_y':0.5}





    Place_order:
        size_hint_y:0.08
        canvas:
            Color:
                rgba:1,1,1,1
            Rectangle:
                size:self.size
                pos:self.pos
        BoxLayout:
            size_hint_y:0.75
            size_hint_x:0.9
            pos_hint:{'center_x':0.5,'center_y':0.5}
            canvas:
                Color:
                    rgba:252/255,248/255,10/255,1
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[8]
            MDLabel:
                text:"Place Order"
                halign:"center"


<Place_btn>:
    background_color:1,1,1,0
    on_release:
        app.manager.transition.direction = 'left'
        app.manager.current = "final"

<Order_header_card>:
    size_hint_y:None
    height:80
    canvas:
        Color:
            rgba:1,1,1,1
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:[5]
    MDLabel:
        text:"header"
        halign:"center"




